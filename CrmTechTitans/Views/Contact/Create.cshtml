@model CrmTechTitans.Models.Contact

@{
    ViewData["Title"] = "Create Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .required-asterisk {
        color: red;
    }
</style>

<div class="main-content">
    <header class="page-header">
        <h1>Create Contact</h1>
        <p class="text-muted">Fill in the details below to add a new contact to the database.</p>
    </header>

    <div class="member-card">
        <div class="member-card-header">
            <div class="member-avatar">
                <i class="fas fa-user-plus"></i>
            </div>
            <div class="member-info">
                <h2 class="member-name">New Contact Information</h2>
            </div>
        </div>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="member-card-content">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <p class="text-muted"><span class="required-asterisk">*</span> Indicates a required field.</p>
                <div class="member-detail">
                    <i class="fas fa-user"></i>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label">
                            First Name <span class="required-asterisk">*</span>
                        </label>
                        <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="member-detail">
                    <i class="fas fa-user"></i>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="member-detail">
                    <i class="fas fa-envelope"></i>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="member-detail">
                    <i class="fas fa-phone"></i>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label">
                            Phone <span class="required-asterisk">*</span>
                        </label>
                        <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>

                <div class="member-detail">
                    <i class="fab fa-linkedin"></i>
                    <div class="form-group">
                        <label asp-for="Linkedin" class="control-label">LinkedIn</label>
                        <input asp-for="Linkedin" class="form-control" placeholder="Enter LinkedIn profile URL" />
                        <span asp-validation-for="Linkedin" class="text-danger"></span>
                    </div>
                </div>
                <div class="member-detail">
                    <i class="fas fa-user"></i>
                    <div class="form-group">
                        <label>Upload Picture</label>
                        <input type="file" name="contactPicture" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="member-card-footer">
                <button type="submit" class="button-1">
                    <i class="fas fa-save"></i> Create
                </button>
                <a asp-action="Index" class="button-2">
                    <i class="fas fa-arrow-left"></i> Back to Contacts
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}