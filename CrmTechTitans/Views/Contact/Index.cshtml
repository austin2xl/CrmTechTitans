@model IEnumerable<CrmTechTitans.Models.Contact>

@{
    ViewData["Title"] = "All Contacts";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="crm-container">
    <!-- Main Content -->
    <div class="main-content">
       

        <section class="members-table-container">
            <table class="table custom-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Role</th>
                        <th>Company</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>LinkedIn</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)

                    {
                        <tr>
                            <td>@item.FullFormalName</td>
                            <td>
                                @(item.MemberContacts.Any()
                                    ? string.Join(", ", item.MemberContacts.Select(mc => mc.ContactType))
                                    : "No Contact Type")
                            </td>
                            <td>
                                @(item.MemberContacts.Any()
                                    ? string.Join(", ", item.MemberContacts
                                    .Where(mc => mc.Member != null)
                                    .Select(mc => mc.Member.MemberName))
                                    : "No Member Associated")
                            </td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Linkedin))

                                {
                                    <a href="@item.Linkedin" target="_blank" class="linkedin-link">
                                        <i class="fab fa-linkedin"></i> View Profile
                                    </a>
                                }

                                else

                                {
                                    <span class="linkedin-placeholder">No LinkedIn</span>
                                }
                            </td>

                            <td class="text-center action-buttons">
                                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-edit">
                                    Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-details">
                                    Details
                                </a>
                              
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>
