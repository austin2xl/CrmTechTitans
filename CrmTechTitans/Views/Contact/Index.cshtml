@model IEnumerable<CrmTechTitans.Models.Contact>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullFormalName)
            </th>
            <th>
                Member
            </th>
            <th>
                Contact Type
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Linkedin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullFormalName)
            </td>
                <td>
                    @if (item.MemberContacts.Any())
                    {
                        @string.Join(", ", item.MemberContacts
                                 .Where(mc => mc.Member != null) 
                                 .Select(mc => mc.Member.MemberName))
                    }
                    else
                    {
                        <span>No Member associated</span>
                    }
                </td>
                <td>
                    @if (item.MemberContacts.Any())
                    {
                        @foreach (var memberContact in item.MemberContacts)
                        {
                            <div>@memberContact.ContactType</div>
                        }
                    }
                    else
                    {
                        <span>No Contact Type available</span>
                    }
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Linkedin)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
