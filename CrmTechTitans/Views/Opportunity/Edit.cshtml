@using CrmTechTitans.Models.Enumerations
@model CrmTechTitans.Models.Opportunity

@{
    ViewData["Title"] = "Edit Opportunity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <header class="page-header">
        <h1>Edit Opportunity</h1>
        <p class="text-muted">Modify the details of the selected opportunity. Ensure all information is correct before saving.</p>
    </header>

    <div class="member-card">
        <div class="member-card-header">
            <div class="member-avatar">
                <i class="fas fa-lightbulb"></i>
            </div>
            <div class="member-info">
                <h2 class="member-name">Edit Opportunity</h2>
            </div>
        </div>
        <div class="member-card-content">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />

                <div class="member-detail">
                    <i class="fas fa-heading"></i>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label">Title</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="member-detail">
                    <i class="fas fa-tasks"></i>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label">Status</label>
                        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<Status>()">
                            <option value="">Select Status</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>

                <div class="member-detail">
                    <i class="fas fa-align-left"></i>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="member-detail">
                    <i class="fas fa-flag"></i>
                    <div class="form-group">
                        <label asp-for="Priority" class="control-label">Priority</label>
                        <select asp-for="Priority" class="form-control" asp-items="Html.GetEnumSelectList<PriorityType>()">
                            <option value="">Select Priority</option>
                        </select>
                        <span asp-validation-for="Priority" class="text-danger"></span>
                    </div>
                </div>
            </form>
        </div>
        <div class="member-card-footer">
            <button type="submit" class="button-1">
                <i class="fas fa-save"></i> Save Changes
            </button>
            <a asp-action="Index" class="button-2">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

