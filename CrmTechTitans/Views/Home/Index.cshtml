@model CrmTechTitans.ViewModels.DashboardVM
@{
    ViewData["Title"] = "Home Page";
}
@* Basic styling for dashboard *@

<style>
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f8f9fa; 
    color: #333;
}

.text-center {
    text-align: center;
    padding: 20px;
}

h1.display-4 {
    font-size: 2.5rem;
    margin-bottom: 20px;
    color: #0056b3; 
}

.status-card h2, .memType h2, .memStatus h2 {
    font-size: 1.25rem;
    color: #007bff;
    margin-bottom: 10px;  /* Add space between title and value */

}

.members-status {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 30px;
}

.status-card {
    background: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    width: 200px;
    text-align: center;
}


.status-card p {
    font-size: 1.75rem;
    font-weight: bold;
    color: #28a745; 
    margin: 0;
}

.memType, .memStatus {
    background: #fff;
    border-radius: 8px;
    padding: 15px;
    text-align: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin: 10px;
    flex: 1;
}


.memType p, .memStatus p {
    font-size: 1.5rem;
    font-weight: bold;
    color: #dc3545;
    margin: 0;
}

div > h2 {
    font-size: 1.5rem;
    margin: 20px 0;
    color: #495057; 
    margin: 0;
}

div > div {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    max-width: 1200px;
}


</style>

<div class="text-center">
    <h1 class="display-4">Welcome Niagara Industrial Association Dashboard</h1>
    @* Section displaying the members count based on status *@
    <div class="members-status">
        <div class="status-card">
            <h2>Total Members</h2>
            <p id="total-members">@Model.MemberCountSummary.TotalMembers</p>
        </div>
       
        <div class="status-card">
            <h2>Active Members</h2>
            <p id="active-members">@Model.MemberCountSummary.ActiveMembers</p>
        </div>
        <div class="status-card">
            <h2>Inactive Members</h2>
            <p id="inactive-members">@Model.MemberCountSummary.InactiveMembers</p>
        </div>
    </div>

    <div>
       <h2>Members for each Membership Type</h2>
        <div>
            <div class="memType">
                <h2>Associate</h2>
                <p id="asso">@Model.MembershipTypeSummary.AssociateCount</p>
            </div>
            <div class="memType">
                <h2>Chamber Associate</h2>
                <p id="chamAsso">@Model.MembershipTypeSummary.ChamberAssociateCount</p>
            </div>
            <div class="memType">
                <h2>Non-Local Industrial</h2>
                <p id="locIndus">@Model.MembershipTypeSummary.NonLocalIndustrialCount</p>
            </div>
            <div class="memType">
                <h2>Government Association</h2>
                <p id="govAsso">@Model.MembershipTypeSummary.GovernmentAssociationCount</p>
            </div>
            <div class="memType">
                <h2>Local</h2>
                <p id="loc">@Model.MembershipTypeSummary.LocalCount</p>
            </div>
            <div class="memType">
                <h2>Others</h2>
                <p id="othr">@Model.MembershipTypeSummary.OtherCount</p>
            </div>
        </div>
    </div>


    <div>
        <h2>View Members by Opportunity Status</h2>
        <div>
            <div class="memStatus">
                <h2>Qualification</h2>
                <p id="qual">@Model.OpportunityCountSummary.QualificationCount</p>
            </div>
            <div class="memStatus">
                <h2>Negotiating</h2>
                <p id="nego">@Model.OpportunityCountSummary.NegotiationCount</p>
            </div>
            <div class="memStatus">
                <h2>Closed - New Members</h2>
                <p id="clnew">@Model.OpportunityCountSummary.ClosedNewMembersCount</p>
            </div>
            <div class="memStatus">
                <h2>Closed - Not Interested</h2>
                <p id="clnot">@Model.OpportunityCountSummary.ClosedNotInterestedCount</p>
            </div>
            
            
        </div>
    </div>

</div>
