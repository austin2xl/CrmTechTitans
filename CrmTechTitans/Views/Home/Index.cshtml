@{
    ViewData["Title"] = "Home Page";
}
@* Basic styling for dashboard *@

<style>
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f8f9fa; 
    color: #333;
}

.text-center {
    text-align: center;
    padding: 20px;
}

h1.display-4 {
    font-size: 2.5rem;
    margin-bottom: 20px;
    color: #0056b3; 
}

h2 {
    font-size: 1.5rem;
    margin: 10px 0;
    color: #333;
}

.members-status {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 30px;
}

.status-card {
    background: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    width: 200px;
    text-align: center;
}

.status-card h2 {
    font-size: 1.25rem;
    margin-bottom: 10px;
    color: #007bff; 
}

.status-card p {
    font-size: 1.75rem;
    font-weight: bold;
    color: #28a745; 
}

.memType, .memStatus {
    background: #fff;
    border-radius: 8px;
    padding: 15px;
    text-align: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin: 10px;
    flex: 1;
}

.memType h2, .memStatus h2 {
    font-size: 1.25rem;
    color: #343a40;
}

.memType p, .memStatus p {
    font-size: 1.5rem;
    font-weight: bold;
    color: #dc3545;
}

div > h2 {
    font-size: 1.5rem;
    margin: 20px 0;
    color: #495057; 
}

div > div {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    max-width: 1200px;
}


</style>

<div class="text-center">
    <h1 class="display-4">Welcome Niagara Industrial Association Dashboard</h1>
    @* Section displaying the members count based on status *@
    <div class="members-status">
        <div class="status-card">
            <h2>Total Members</h2>
            <p id="total-members">50</p>
        </div>
        <div class="status-card">
            <h2>Active Members</h2>
            <p id="active-members">20</p>
        </div>
        <div class="status-card">
            <h2>Inactive Members</h2>
            <p id="inactive-members">30</p>
        </div>
    </div>

    <div>
        <h2>Members for each Membership Type.</h2>
        <div>
            <div class="memType">
                <h2>Associate</h2>
                <p id="asso">7</p>
            </div>
            <div class="memType">
                <h2>Chamber Associate</h2>
                <p id="chamAsso">5</p>
            </div>
            <div class="memType">
                <h2>Non-Local Industrial</h2>
                <p id="locIndus">7</p>
            </div>
            <div class="memType">
                <h2>Government Association</h2>
                <p id="govAsso">6</p>
            </div>
            <div class="memType">
                <h2>Local</h2>
                <p id="loc">3</p>
            </div>
            <div class="memType">
                <h2>Others</h2>
                <p id="othr">3</p>
            </div>
        </div>
    </div>


    <div>
        <h2>View Members by Opportunity Status.</h2>
        <div>
            <div class="memStatus">
                <h2>Qualification</h2>
                <p id="qual">7</p>
            </div>
            <div class="memStatus">
                <h2>Negotiating</h2>
                <p id="nego">5</p>
            </div>
            <div class="memStatus">
                <h2>Closed - New Members</h2>
                <p id="clnew">7</p>
            </div>
            <div class="memStatus">
                <h2>Closed - Not Interested</h2>
                <p id="clnot">6</p>
            </div>
            
        </div>
    </div>






</div>
