@model CrmTechTitans.Models.Member

@{
    ViewData["Title"] = "Member Details";
}

<div class="main-content">
    <!-- Page Header -->
    <div class="page-header text-center">
        <h1>Member Details</h1>
        <p class="text-muted">Below is the detailed information of the selected member.</p>
    </div>

    <!-- Details Section -->
    <div class="details-section bg-white p-4 rounded shadow-sm mx-auto" style="max-width: 800px;">
        <h4 class="text-danger mb-4 text-center">Member Information</h4>
        <table class="table table-borderless table-sm">
            <tbody>
                <tr>
                    <th class="col-sm-3 text-end text-danger fw-bold">Name:</th>
                    <td class="col-sm-9">@Html.DisplayFor(model => model.MemberName)</td>
                </tr>
                <tr>
                    <th class="col-sm-3 text-end text-danger fw-bold">Membership Type:</th>
                    <td class="col-sm-9">@Html.DisplayFor(model => model.MembershipType)</td>
                </tr>
                <tr>
                    <th class="col-sm-3 text-end text-danger fw-bold">Contacted By:</th>
                    <td class="col-sm-9">@Html.DisplayFor(model => model.ContactedBy)</td>
                </tr>
                <tr>
                    <th class="col-sm-3 text-end text-danger fw-bold">Company Size:</th>
                    <td class="col-sm-9">@Html.DisplayFor(model => model.CompanySize)</td>
                </tr>
                <tr>
                    <th class="text-end text-danger fw-bold pe-3">Website:</th>
                    <td>
                        <a href="@Model.CompanyWebsite" target="_blank" rel="noopener noreferrer" class="web-link">
                            <i class="fas fa-external-link-alt me-1"></i>@Html.DisplayFor(model => model.CompanyWebsite)
                        </a>
                    </td>
                </tr>
                <tr>
                    <th class="col-sm-3 text-end text-danger fw-bold">Member Since:</th>
                    <td class="col-sm-9">@Html.DisplayFor(model => model.MemberSince)</td>
                </tr>
                <tr>
                    <th class="col-sm-3 text-end text-danger fw-bold">Last Contact Date:</th>
                    <td class="col-sm-9">@Html.DisplayFor(model => model.LastContactDate)</td>
                </tr>
                <tr>
                    <th class="col-sm-3 text-end text-danger fw-bold">Notes:</th>
                    <td class="col-sm-9">@Html.DisplayFor(model => model.Notes)</td>
                </tr>
                <tr>
                    <th class="col-sm-3 text-end text-danger fw-bold">Membership Status:</th>
                    <td class="col-sm-9">@Html.DisplayFor(model => model.MembershipStatus)</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Button Section -->
    <div class="button-container mt-4 text-end">
        <a asp-action="Edit" asp-route-id="@Model?.ID" class="button-2">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="button-2">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>
