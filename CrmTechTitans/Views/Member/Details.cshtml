@model CrmTechTitans.Models.Member

@section Styles {
    <link rel="stylesheet" href="~/css/details.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Member Details";
}

<div class="main-content">
    <header class="details-page-header">
        <h1>Member Details</h1>
        <p class="text-muted">Comprehensive overview of member information</p>
    </header>

    <div class="details-card">
        <div class="details-card-header">
            <div class="details-avatar">
                <i class="fas fa-user"></i>
            </div>
            <div class="member-info">
                <h2 class="details-name">@Model.MemberName</h2>
                <p class="details-type">@Model.MembershipType</p>
            </div>
        </div>

        <div class="details-content">
            <div class="detail-item">
                <i class="fas fa-user-tie"></i>
                <span>
                    <strong>Contacted By:</strong>
                    @Html.DisplayFor(model => model.ContactedBy)
                </span>
            </div>

            <div class="detail-item">
                <i class="fas fa-building"></i>
                <span>
                    <strong>Company Size:</strong>
                    @Html.DisplayFor(model => model.CompanySize)
                </span>
            </div>

            <div class="detail-item">
                <i class="fas fa-globe"></i>
                <span>
                    <strong>Website:</strong>
                    <a href="@Model.CompanyWebsite" target="_blank" rel="noopener noreferrer" class="web-link">
                        @Html.DisplayFor(model => model.CompanyWebsite)
                    </a>
                </span>
            </div>

            <div class="detail-item">
                <i class="fas fa-calendar-alt"></i>
                <span>
                    <strong>Member Since:</strong>
                    @Html.DisplayFor(model => model.MemberSince)
                </span>
            </div>

            <div class="detail-item">
                <i class="fas fa-phone"></i>
                <span>
                    <strong>Last Contact Date:</strong>
                    @Html.DisplayFor(model => model.LastContactDate)
                </span>
            </div>

            <div class="detail-item">
                <i class="fas fa-sticky-note"></i>
                <span>
                    <strong>Notes:</strong>
                    @Html.DisplayFor(model => model.Notes)
                </span>
            </div>

            <div class="detail-item">
                <i class="fas fa-check-circle"></i>
                <span>
                    <strong>Membership Status:</strong>
                    @Html.DisplayFor(model => model.MembershipStatus)
                </span>
            </div>
        </div>

        <div class="details-footer">
            <a asp-action="Edit" asp-route-id="@Model?.ID" class="detail-btn-primary">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="detail-btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>