        // Function to renumber form elements after removal
        function renumberFormElements(type) {
            if (type === 'contact') {
                const contactForms = document.querySelectorAll('.contact-form');
                contactForms.forEach((form, index) => {
                    // Update the heading
                    const heading = form.querySelector('h6');
                    if (heading) {
                        heading.textContent = `Contact #${index + 1}`;
                    }

                    // Update input names and IDs
                    const inputs = form.querySelectorAll('input, select, textarea');
                    inputs.forEach(input => {
                        const name = input.getAttribute('name');
                        if (name && name.includes('Contacts[')) {
                            const newName = name.replace(/Contacts\[\d+\]/, `Contacts[${index}]`);
                            input.setAttribute('name', newName);

                            // Update IDs and labels if they exist
                            const id = input.getAttribute('id');
                            if (id && id.match(/^(firstName|lastName|email|phone|contactType|contactPicture)\d+$/)) {
                                const baseId = id.replace(/\d+$/, '');
                                const newId = `${baseId}${index}`;
                                input.setAttribute('id', newId);

                                // Find and update the corresponding label
                                const label = form.querySelector(`label[for="${id}"]`);
                                if (label) {
                                    label.setAttribute('for', newId);
                                }
                            }
                        }
                    });
                });
            } else if (type === 'address') {
                const addressForms = document.querySelectorAll('.address-form');
                addressForms.forEach((form, index) => {
                    // Update the heading
                    const heading = form.querySelector('h6');
                    if (heading) {
                        heading.textContent = `Address #${index + 1}`;
                    }

                    // Update input names and IDs
                    const inputs = form.querySelectorAll('input, select');
                    inputs.forEach(input => {
                        const name = input.getAttribute('name');
                        if (name && name.includes('Addresses[')) {
                            const newName = name.replace(/Addresses\[\d+\]/, `Addresses[${index}]`);
                            input.setAttribute('name', newName);

                            // Update IDs and labels if they exist
                            const id = input.getAttribute('id');
                            if (id && id.match(/^(street|city|province|postalCode|addressType)\d+$/)) {
                                const baseId = id.replace(/\d+$/, '');
                                const newId = `${baseId}${index}`;
                                input.setAttribute('id', newId);

                                // Find and update the corresponding label
                                const label = form.querySelector(`label[for="${id}"]`);
                                if (label) {
                                    label.setAttribute('for', newId);
                                }
                            }
                        }
                    });
                });
            }
        }
