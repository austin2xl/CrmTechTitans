@using CrmTechTitans.Models.Enumerations
@using CrmTechTitans.Models
@model CrmTechTitans.Models.ViewModels.MemberCreateViewModel

@{
    ViewData["Title"] = "Edit Member";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-xxl-8">
            <!-- Page Header -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <div>
                    <h1 class="h3 mb-0 text-dark fw-bold">Edit Member</h1>
                    <p class="text-secondary mb-0">Modify the details of the selected member. Ensure all details are correct before saving.</p>
                </div>
            </div>

            <!-- Member Card -->
            <div class="card shadow-sm border-0 mb-4 bg-white">
                <div class="card-body p-lg-5">
                    <!-- Member Header with Photo -->
                    <div class="mb-4 text-center">
                        @{
                            var hasMemberPicture = (Model.MemberPhoto?.Content != null);
                            if (hasMemberPicture)
                            {
                                string imageBase64 = Convert.ToBase64String(Model.MemberPhoto.Content);
                                string imageSrc = string.Format("data:" + Model.MemberPhoto.MimeType + ";base64,{0}", imageBase64);
                                <div class="mb-3 position-relative mx-auto" style="width: 120px;">
                                    <img src="@imageSrc" alt="Profile Picture of @Model.MemberName"
                                         title="Profile Picture of @Model.MemberName" class="img-fluid rounded-circle shadow-sm border border-2 border-light"
                                         style="width: 120px; height: 120px; object-fit: cover;" />
                                </div>
                            }
                        }
                    </div>

                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="ID" />

                        <!-- Member Details Section -->
                        <div class="row g-4 mb-5">
                            <div class="col-12">
                                <h5 class="border-bottom pb-2 mb-3 text-dark">Member Information</h5>
                            </div>

                            <!-- Member Name -->
                            <div class="col-md-6">
                                <div class="form-group mb-0">
                                    <label asp-for="MemberName" class="form-label text-secondary">Name</label>
                                    <input asp-for="MemberName" class="form-control bg-light border-secondary h-auto py-2" placeholder="Enter Member Name" />
                                    <span asp-validation-for="MemberName" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Member Photo -->
                            <div class="col-md-6">
                                <div class="form-group mb-0">
                                    <label asp-for="MemberPhoto" class="form-label text-secondary">Member Picture</label>
                                    <div class="input-group h-auto">
                                        <input asp-for="MemberPhoto" type="file" class="form-control bg-light border-secondary py-2" name="memberPicture" id="memberPicture">
                                        @if (hasMemberPicture)
                                        {
                                            <div class="input-group-text bg-light border-secondary py-2">
                                                <div class="form-check mb-0">
                                                    <input class="form-check-input" type="checkbox" id="chkRemoveMemberImage" name="chkRemoveMemberImage">
                                                    <label class="form-check-label text-secondary" for="chkRemoveMemberImage">
                                                        Remove
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <span asp-validation-for="MemberPhoto" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Membership Types -->
                            <div class="col-12">
                                <div class="form-group mb-0">
                                    <label class="form-label text-secondary">Membership Types</label>
                                    <div class="row g-2 mt-1">
                                        @foreach (var type in Model.AvailableMembershipTypes)
                                        {
                                            <div class="col-md-4 col-lg-3">
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" name="SelectedMembershipTypeIDs" value="@type.ID"
                                                    @(Model.SelectedMembershipTypeIDs.Contains(type.ID) ? "checked" : "") id="membershipType@(type.ID)" />
                                                    <label class="form-check-label text-secondary" for="membershipType@(type.ID)">@type.Name</label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <span asp-validation-for="SelectedMembershipTypeIDs" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Contacted By -->
                            <div class="col-md-6 col-lg-3">
                                <div class="form-group mb-0">
                                    <label asp-for="ContactedBy" class="form-label text-secondary">Contacted By</label>
                                    <input asp-for="ContactedBy" class="form-control bg-light border-secondary h-auto py-2" placeholder="Enter Contact Person" />
                                    <span asp-validation-for="ContactedBy" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Company Size -->
                            <div class="col-md-6 col-lg-3">
                                <div class="form-group mb-0">
                                    <label asp-for="CompanySize" class="form-label text-secondary">Company Size</label>
                                    <select asp-for="CompanySize" class="form-select bg-light border-secondary h-auto py-2" asp-items="Html.GetEnumSelectList<CompanySize>()">
                                        <option value="">Select Size</option>
                                    </select>
                                    <span asp-validation-for="CompanySize" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Company Website -->
                            <div class="col-md-6 col-lg-3">
                                <div class="form-group mb-0">
                                    <label asp-for="CompanyWebsite" class="form-label text-secondary">Website</label>
                                    <input asp-for="CompanyWebsite" class="form-control bg-light border-secondary h-auto py-2" placeholder="Enter Company Website" />
                                    <span asp-validation-for="CompanyWebsite" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Membership Status -->
                            <div class="col-md-6 col-lg-3">
                                <div class="form-group mb-0">
                                    <label asp-for="MembershipStatus" class="form-label text-secondary">Status</label>
                                    <select asp-for="MembershipStatus" class="form-select bg-light border-secondary h-auto py-2" asp-items="Html.GetEnumSelectList<MembershipStatus>()">
                                        <option value="">Select Status</option>
                                    </select>
                                    <span asp-validation-for="MembershipStatus" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Member Since -->
                            <div class="col-md-6">
                                <div class="form-group mb-0">
                                    <label asp-for="MemberSince" class="form-label text-secondary">Member Since</label>
                                    <input asp-for="MemberSince" class="form-control bg-light border-secondary h-auto py-2" type="datetime-local" />
                                    <span asp-validation-for="MemberSince" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Last Contact Date -->
                            <div class="col-md-6">
                                <div class="form-group mb-0">
                                    <label asp-for="LastContactDate" class="form-label text-secondary">Last Contact Date</label>
                                    <input asp-for="LastContactDate" class="form-control bg-light border-secondary h-auto py-2" type="datetime-local" />
                                    <span asp-validation-for="LastContactDate" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Notes -->
                            <div class="col-12">
                                <div class="form-group mb-0">
                                    <label asp-for="Notes" class="form-label text-secondary">Notes</label>
                                    <textarea asp-for="Notes" class="form-control bg-light border-secondary" style="height: 100px" placeholder="Enter any additional notes"></textarea>
                                    <span asp-validation-for="Notes" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Addresses Section -->
                        <div class="card shadow-sm mb-4 border-0 bg-white">
                            <div class="card-header bg-light py-3 border-bottom border-secondary">
                                <h5 class="mb-0 text-dark fw-bold">Addresses</h5>
                            </div>
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-end mb-4">
                                    <button type="button" id="add-address" class="btn btn-dark px-4">
                                        <i class="fas fa-plus me-2"></i> Add New Address
                                    </button>
                                </div>

                                <div id="addresses-container">
                                    @for (int i = 0; i < Model.Addresses.Count; i++)
                                    {
                                        <div class="address-form mb-4 p-3 border rounded bg-light border-secondary">
                                            <div class="d-flex justify-content-between align-items-center mb-3">
                                                <h6 class="mb-0 fw-bold text-dark">Address #@(i + 1)</h6>
                                                @if (i > 0) // Only show remove button for non-primary addresses
                                                {
                                                    <button type="button" class="btn btn-sm btn-outline-secondary remove-address">
                                                        <i class="fas fa-trash-alt me-1"></i> Remove
                                                    </button>
                                                }
                                            </div>
                                            <div class="row g-3">
                                                <div class="col-md-12">
                                                    <div class="form-group mb-0">
                                                        <label asp-for="Addresses[i].Street" class="form-label text-secondary">Street</label>
                                                        <input asp-for="Addresses[i].Street" class="form-control bg-white border-secondary h-auto py-2" placeholder="Enter Street Address" />
                                                        <span asp-validation-for="Addresses[i].Street" class="text-danger small"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-5">
                                                    <div class="form-group mb-0">
                                                        <label asp-for="Addresses[i].City" class="form-label text-secondary">City</label>
                                                        <input asp-for="Addresses[i].City" class="form-control bg-white border-secondary h-auto py-2" placeholder="Enter City" />
                                                        <span asp-validation-for="Addresses[i].City" class="text-danger small"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group mb-0">
                                                        <label asp-for="Addresses[i].Province" class="form-label text-secondary">Province</label>
                                                        <select asp-for="Addresses[i].Province" class="form-select bg-white border-secondary h-auto py-2" asp-items="Html.GetEnumSelectList<Province>()">
                                                            <option value="">Select</option>
                                                        </select>
                                                        <span asp-validation-for="Addresses[i].Province" class="text-danger small"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group mb-0">
                                                        <label asp-for="Addresses[i].PostalCode" class="form-label text-secondary">Postal Code</label>
                                                        <input asp-for="Addresses[i].PostalCode" class="form-control bg-white border-secondary h-auto py-2" placeholder="Enter Postal Code" />
                                                        <span asp-validation-for="Addresses[i].PostalCode" class="text-danger small"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group mb-0">
                                                        <label asp-for="Addresses[i].AddressType" class="form-label text-secondary">Address Type</label>
                                                        <select asp-for="Addresses[i].AddressType" class="form-select bg-white border-secondary h-auto py-2" asp-items="Html.GetEnumSelectList<AddressType>()">
                                                            <option value="">Select Type</option>
                                                        </select>
                                                        <span asp-validation-for="Addresses[i].AddressType" class="text-danger small"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Contacts Section -->
                        <div class="card shadow-sm mb-4 border-0 bg-white">
                            <div class="card-header bg-light py-3 border-bottom border-secondary">
                                <h5 class="mb-0 text-dark fw-bold">Contacts</h5>
                            </div>
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-end mb-4">
                                    <button type="button" id="add-contact" class="btn btn-dark px-4">
                                        <i class="fas fa-plus me-2"></i> Add New Contact
                                    </button>
                                </div>

                                <div id="contacts-container">
                                    @for (int i = 0; i < Model.Contacts.Count; i++)
                                    {
                                        <div class="contact-form mb-4 p-3 border rounded bg-light border-secondary">
                                            <div class="d-flex justify-content-between align-items-center mb-3">
                                                <h6 class="mb-0 fw-bold text-dark">Contact #@(i + 1)</h6>
                                                @if (i > 0) // Only show remove button for non-primary contacts
                                                {
                                                    <button type="button" class="btn btn-sm btn-outline-secondary remove-contact">
                                                        <i class="fas fa-trash-alt me-1"></i> Remove
                                                    </button>
                                                }
                                            </div>
                                            <div class="row g-3">
                                                @{
                                                    var hasContactPicture = (Model.Contacts[i].ContactPhoto?.Content != null);
                                                    if (hasContactPicture)
                                                    {
                                                        <div class="col-md-12 text-center mb-2">
                                                            @{
                                                                string imageBase64 = Convert.ToBase64String(Model.Contacts[i].ContactPhoto.Content);
                                                                string imageSrc = string.Format("data:" + Model.Contacts[i].ContactPhoto.MimeType + ";base64,{0}", imageBase64);
                                                            }
                                                            <img src="@imageSrc" alt="Profile Picture of @Model.Contacts[i].FirstName"
                                                                 title="Profile Picture of @Model.Contacts[i].FirstName" class="img-fluid rounded-circle shadow-sm border border-2 border-light"
                                                                 style="width: 80px; height: 80px; object-fit: cover;" />
                                                        </div>
                                                    }
                                                }
                                                <div class="col-md-6">
                                                    <div class="form-group mb-0">
                                                        <label asp-for="Contacts[i].FirstName" class="form-label text-secondary">First Name</label>
                                                        <input asp-for="Contacts[i].FirstName" class="form-control bg-white border-secondary h-auto py-2" placeholder="Enter First Name" />
                                                        <span asp-validation-for="Contacts[i].FirstName" class="text-danger small"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group mb-0">
                                                        <label asp-for="Contacts[i].LastName" class="form-label text-secondary">Last Name</label>
                                                        <input asp-for="Contacts[i].LastName" class="form-control bg-white border-secondary h-auto py-2" placeholder="Enter Last Name" />
                                                        <span asp-validation-for="Contacts[i].LastName" class="text-danger small"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group mb-0">
                                                        <label asp-for="Contacts[i].ContactPhoto" class="form-label text-secondary">Contact Picture</label>
                                                        <div class="input-group h-auto">
                                                            <input asp-for="Contacts[i].ContactPhoto" type="file" class="form-control bg-white border-secondary py-2" name="contactPicture" id="contactPicture@(i)">
                                                            @if (hasContactPicture)
                                                            {
                                                                <div class="input-group-text bg-white border-secondary py-2">
                                                                    <div class="form-check mb-0">
                                                                        <input class="form-check-input" type="checkbox" id="chkRemoveContactImage@(i)" name="chkRemoveContactImage@(i)">
                                                                        <label class="form-check-label text-secondary" for="chkRemoveContactImage@(i)">
                                                                            Remove
                                                                        </label>
                                                                    </div>
                                                                </div>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group mb-0">
                                                        <label asp-for="Contacts[i].Email" class="form-label text-secondary">Email</label>
                                                        <input asp-for="Contacts[i].Email" class="form-control bg-white border-secondary h-auto py-2" placeholder="Enter Email" />
                                                        <span asp-validation-for="Contacts[i].Email" class="text-danger small"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group mb-0">
                                                        <label asp-for="Contacts[i].Phone" class="form-label text-secondary">Phone</label>
                                                        <input asp-for="Contacts[i].Phone" class="form-control bg-white border-secondary h-auto py-2" placeholder="Enter Phone Number" />
                                                        <span asp-validation-for="Contacts[i].Phone" class="text-danger small"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group mb-0">
                                                        <label asp-for="Contacts[i].ContactType" class="form-label text-secondary">Contact Type</label>
                                                        <select asp-for="Contacts[i].ContactType" class="form-select bg-white border-secondary h-auto py-2" asp-items="Html.GetEnumSelectList<ContactType>()">
                                                            <option value="">Select Type</option>
                                                        </select>
                                                        <span asp-validation-for="Contacts[i].ContactType" class="text-danger small"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Industries Section -->
                        <div class="card shadow-sm mb-4 border-0 bg-white">
                            <div class="card-header bg-light py-3 border-bottom border-secondary">
                                <h5 class="mb-0 text-dark fw-bold">Industries</h5>
                            </div>
                            <div class="card-body p-4">
                                <div class="form-group">
                                    <select asp-for="SelectedIndustryIds" class="form-select bg-white border-secondary" multiple data-bs-toggle="tooltip"
                                            title="Hold Ctrl (or Cmd on Mac) to select multiple industries" style="height: auto; min-height: 150px;">
                                        @foreach (var industry in Model.AvailableIndustries)
                                        {
                                            <option value="@industry.ID">@industry.Name (NAICS: @industry.NAICS)</option>
                                        }
                                    </select>
                                    <span asp-validation-for="SelectedIndustryIds" class="text-danger small"></span>
                                    <div class="form-text mt-2 small text-secondary">
                                        <i class="fas fa-info-circle me-1"></i> Hold Ctrl (or Cmd on Mac) to select multiple industries
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                                <i class="fas fa-arrow-left me-2"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-dark px-4 py-2">
                                <i class="fas fa-save me-2"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // For existing contacts
            document.querySelectorAll('.remove-contact').forEach(button => {
                button.addEventListener('click', function() {
                    this.closest('.contact-form').remove();
                    renumberFormElements('contact');
                });
            });

            // For existing addresses
            document.querySelectorAll('.remove-address').forEach(button => {
                button.addEventListener('click', function() {
                    this.closest('.address-form').remove();
                    renumberFormElements('address');
                });
            });
        });

        // Add Contact
        document.getElementById('add-contact').addEventListener('click', function () {
            const contactsContainer = document.getElementById('contacts-container');
            const contactCount = document.querySelectorAll('.contact-form').length;

            const contactForm = document.createElement('div');
            contactForm.classList.add('contact-form', 'mb-4', 'p-3', 'border', 'rounded', 'bg-light', 'border-secondary');
            contactForm.innerHTML = `
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="mb-0 fw-bold text-dark">Contact #${contactCount + 1}</h6>
                    <button type="button" class="btn btn-sm btn-outline-secondary remove-contact">
                        <i class="fas fa-trash-alt me-1"></i> Remove
                    </button>
                </div>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-group mb-0">
                            <label class="form-label text-secondary">First Name</label>
                            <input name="Contacts[${contactCount}].FirstName" class="form-control bg-white border-secondary h-auto py-2" placeholder="Enter First Name" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-0">
                            <label class="form-label text-secondary">Last Name</label>
                            <input name="Contacts[${contactCount}].LastName" class="form-control bg-white border-secondary h-auto py-2" placeholder="Enter Last Name" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group mb-0">
                            <label class="form-label text-secondary">Contact Picture</label>
                            <input type="file" name="Contacts[${contactCount}].ContactPhoto" class="form-control bg-white border-secondary py-2" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-0">
                            <label class="form-label text-secondary">Email</label>
                            <input name="Contacts[${contactCount}].Email" class="form-control bg-white border-secondary h-auto py-2" placeholder="Enter Email" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-0">
                            <label class="form-label text-secondary">Phone</label>
                            <input name="Contacts[${contactCount}].Phone" class="form-control bg-white border-secondary h-auto py-2" placeholder="Enter Phone Number" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-0">
                            <label class="form-label text-secondary">Contact Type</label>
                            <select name="Contacts[${contactCount}].ContactType" class="form-select bg-white border-secondary h-auto py-2">
                                <option value="">Select Type</option>
        @foreach (var value in Enum.GetValues(typeof(ContactType)))
        {
                                    <option value="@value">@value</option>
        }
                            </select>
                        </div>
                    </div>
                </div>
            `;
            contactsContainer.appendChild(contactForm);

            // Add event listener to the new remove button
            contactForm.querySelector('.remove-contact').addEventListener('click', function() {
                contactForm.remove();
                renumberFormElements('contact');
            });
        });

        // Add Address
        document.getElementById('add-address').addEventListener('click', function () {
            const addressesContainer = document.getElementById('addresses-container');
            const addressCount = document.querySelectorAll('.address-form').length;

            const addressForm = document.createElement('div');
            addressForm.classList.add('address-form', 'mb-4', 'p-3', 'border', 'rounded', 'bg-light', 'border-secondary');
            addressForm.innerHTML = `
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="mb-0 fw-bold text-dark">Address #${addressCount + 1}</h6>
                    <button type="button" class="btn btn-sm btn-outline-secondary remove-address">
                        <i class="fas fa-trash-alt me-1"></i> Remove
                    </button>
                </div>
                <div class="row g-3">
                    <div class="col-md-12">
                        <div class="form-group mb-0">
                            <label class="form-label text-secondary">Street</label>
                            <input name="Addresses[${addressCount}].Street" class="form-control bg-white border-secondary h-auto py-2" placeholder="Enter Street Address" />
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group mb-0">
                            <label class="form-label text-secondary">City</label>
                            <input name="Addresses[${addressCount}].City" class="form-control bg-white border-secondary h-auto py-2" placeholder="Enter City" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-0">
                            <label class="form-label text-secondary">Province</label>
                            <select name="Addresses[${addressCount}].Province" class="form-select bg-white border-secondary h-auto py-2">
                                <option value="">Select</option>
        @foreach (var value in Enum.GetValues(typeof(Province)))
        {
                                    <option value="@value">@value</option>
        }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-0">
                            <label class="form-label text-secondary">Postal Code</label>
                            <input name="Addresses[${addressCount}].PostalCode" class="form-control bg-white border-secondary h-auto py-2" placeholder="Enter Postal Code" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-0">
                            <label class="form-label text-secondary">Address Type</label>
                            <select name="Addresses[${addressCount}].AddressType" class="form-select bg-white border-secondary h-auto py-2">
                                <option value="">Select Type</option>
        @foreach (var value in Enum.GetValues(typeof(AddressType)))
        {
                                    <option value="@value">@value</option>
        }
                            </select>
