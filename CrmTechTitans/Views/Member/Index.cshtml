@model IEnumerable<CrmTechTitans.Models.Member>

@{
    ViewData["Title"] = "All Members";
}

<div class="main-content">
    <header class="page-header">
        <a asp-action="Create" class="btn btn-danger">
            <i class="fas fa-user-plus"></i> Create New Member
        </a>
    </header>

    <section class="members-grid">
        @foreach (var item in Model)

        {
            <div class="member-card">
                <div class="member-card-header">
                    <div class="member-avatar">
                        <div class="avatar-placeholder">
                            @(item.MemberName?.Length > 0 ? item.MemberName[0].ToString() : "")
                        </div>
                    </div>
                    <div class="member-info">
                        <h2 class="member-name">@item.MemberName</h2>
                        <p class="member-type">@item.MembershipType</p>
                    </div>
                </div>
                <div class="member-card-content">
                    <div class="member-detail">
                        <i class="fas fa-industry"></i>
                        <span>
                            @{
                                var industries = item.IndustryMembers?.Select(im => im.Industry.Name);
                                @(industries != null && industries.Any() ? string.Join(", ", industries) : "No industries associated")
                            }
                        </span>
                    </div>
                    <div class="member-detail">
                        <i class="fas fa-user"></i>
                        <span>@(item.ContactedBy ?? "N/A")</span>
                    </div>
                    <div class="member-detail">
                        <i class="fas fa-users"></i>
                        <span>@(item.CompanySize.ToString() ?? "N/A")</span>
                    </div>
                    <div class="member-detail">
                        <i class="fas fa-globe"></i>
                        @if (!string.IsNullOrEmpty(item.CompanyWebsite))

                        {
                            <a href="@item.CompanyWebsite" target="_blank" class="web-link">@item.CompanyWebsite</a>
                        }

                        else

                        {
                            <span class="text-muted">No website available</span>
                        }
                    </div>
                    <div class="member-detail">
                        <i class="fas fa-calendar-alt"></i>
                        <span>@item.MemberSince.ToShortDateString()</span>
                    </div>
                    <div class="member-detail">
                        <i class="fas fa-phone"></i>
                        <span>@(item.LastContactDate?.ToShortDateString() ?? "N/A")</span>
                    </div>
                    <div class="member-detail">
                        <i class="fas fa-check-circle"></i>
                        <span>@item.MembershipStatus</span>
                    </div>
                </div>
                <div class="member-card-footer">
                    <a asp-action="Edit" asp-route-id="@item.ID" class="button-2">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@item.ID" class="button-2">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
                  
                </div>
            </div>
        }
    </section>
</div>
