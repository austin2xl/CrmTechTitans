@using CrmTechTitans.Models.Enumerations
@model CrmTechTitans.Models.ViewModels.MemberCreateViewModel

@{
    ViewData["Title"] = "Create Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/multi-step-form.css" />

<div class="container">
    <div class="form-card">
        <div class="form-header">
            <div class="header-content">
                <div class="header-icon">
                    <i class="fas fa-user-plus"></i>
                </div>
                <div class="header-text">
                    <h1>Create Member</h1>
                    <p>Fill in the details below to add a new member to the database.</p>
                </div>
            </div>
        </div>

        <!-- Form Steps Progress Indicator -->
        <div class="step-progress">
            <div class="step-progress-bar" id="progress-bar"></div>
            <div class="step-indicator active" data-step="1">1</div>
            <div class="step-indicator" data-step="2">2</div>
            <div class="step-indicator" data-step="3">3</div>
            <div class="step-indicator" data-step="4">4</div>
        </div>

        <div class="form-body">
            <form asp-action="Create" method="post" id="multiStepForm" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
                <p class="required-field-note"><span class="required-asterisk">*</span> Indicates a required field.</p>

                <!-- Step 1: Member Details -->
                <div class="form-step active" id="step1">
                    <h2>Step 1: Member Details</h2>

                    <div class="form-row">
                        <div class="form-group half-width">
                            <label asp-for="MemberName">Member Name <span class="required-asterisk">*</span></label>
                            <div class="input-group">
                                <span class="input-icon"><i class="fas fa-user"></i></span>
                                <input asp-for="MemberName" class="form-input required" placeholder="Enter member name" />
                            </div>
                            <span class="field-validation-error membername-error" style="display: none;">Member name is required</span>
                            <span asp-validation-for="MemberName" class="field-validation-error"></span>
                        </div>
                        <div class="form-group half-width">
                            <label asp-for="MemberPhoto">Company Picture</label>
                            <div class="input-group">
                                <span class="input-icon"><i class="fas fa-image"></i></span>
                                <input asp-for="MemberPhoto" type="file" class="form-input" name="MemberPicture" id="MemberPicture" onchange="previewImage(this, 'memberPhotoPreview')" />
                            </div>
                            <div class="image-preview">
                                <img id="memberPhotoPreview" class="preview-image" src="#" alt="Preview" />
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group half-width">
                            <label>Membership Type <span class="required-asterisk">*</span></label>
                            <div class="checkbox-group">
                                @foreach (var type in Model.AvailableMembershipTypes)
                                {
                                    <div class="checkbox-item">
                                        <input type="checkbox" class="form-checkbox membership-type" name="SelectedMembershipTypeIDs" value="@type.ID"
                                        @(Model.SelectedMembershipTypeIDs.Contains(type.ID) ? "checked" : "") />
                                        <label>@type.Name</label>
                                    </div>
                                }
                            </div>
                            <span class="field-validation-error membership-error" style="display: none;">Please select at least one membership type</span>
                            <span asp-validation-for="SelectedMembershipTypeIDs" class="field-validation-error"></span>
                        </div>
                        <div class="form-group half-width">
                            <label asp-for="CompanySize">Company Size <span class="required-asterisk">*</span></label>
                            <select asp-for="CompanySize" class="form-select required" asp-items="Html.GetEnumSelectList<CompanySize>()">
                                <option value="">Select Company Size</option>
                            </select>
                            <span class="field-validation-error companysize-error" style="display: none;">Company size is required</span>
                            <span asp-validation-for="CompanySize" class="field-validation-error"></span>

                            <label asp-for="CompanyWebsite">Company Website</label>
                            <div class="input-group">
                                <span class="input-icon"><i class="fas fa-globe"></i></span>
                                <input asp-for="CompanyWebsite" class="form-input" placeholder="Enter company website" />
                            </div>
                            <span asp-validation-for="CompanyWebsite" class="field-validation-error"></span>

                            <label asp-for="ContactedBy">Contacted By</label>
                            <div class="input-group">
                                <span class="input-icon"><i class="fas fa-user-tie"></i></span>
                                <input asp-for="ContactedBy" class="form-input" placeholder="Enter contact person" />
                            </div>
                            <span asp-validation-for="ContactedBy" class="field-validation-error"></span>
                        </div>
                    </div>

                    <div class="form-navigation">
                        <button type="button" class="btn btn-primary next-step">Continue <i class="fas fa-arrow-right"></i></button>
                    </div>
                </div>

                <!-- Step 2: Dates and Notes -->
                <div class="form-step" id="step2">
                    <h2>Step 2: Dates and Notes</h2>

                    <div class="form-row">
                        <div class="form-group half-width">
                            <label asp-for="MemberSince">Member Since</label>
                            <div class="input-group">
                                <span class="input-icon"><i class="fas fa-calendar-alt"></i></span>
                                <input asp-for="MemberSince" class="form-input" type="date" />
                            </div>
                            <span asp-validation-for="MemberSince" class="field-validation-error"></span>
                        </div>
                        <div class="form-group half-width">
                            <label asp-for="LastContactDate">Last Contact Date</label>
                            <div class="input-group">
                                <span class="input-icon"><i class="fas fa-calendar-check"></i></span>
                                <input asp-for="LastContactDate" class="form-input" type="date" />
                            </div>
                            <span asp-validation-for="LastContactDate" class="field-validation-error"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Notes">Notes</label>
                        <div class="input-group">
                            <span class="input-icon"><i class="fas fa-sticky-note"></i></span>
                            <textarea asp-for="Notes" class="form-textarea" rows="4" placeholder="Enter any additional notes"></textarea>
                        </div>
                        <span asp-validation-for="Notes" class="field-validation-error"></span>
                    </div>

                    <div class="form-navigation">
                        <button type="button" class="btn btn-secondary prev-step"><i class="fas fa-arrow-left"></i> Back</button>
                        <button type="button" class="btn btn-primary next-step">Continue <i class="fas fa-arrow-right"></i></button>
                    </div>
                </div>

                <!-- Step 3: Addresses -->
                <div class="form-step" id="step3">
                    <h2>Step 3: Addresses</h2>

                    <div id="addresses-container">
                        @for (int i = 0; i < Model.Addresses.Count; i++)
                        {
                            <div class="address-form form-card" data-address-index="@i">
                                <div class="form-card-header">
                                    <h3>Address @(i + 1)</h3>
                                    @if (i > 0)
                                    {
                                        <button type="button" class="btn btn-danger remove-address">
                                            <i class="fas fa-trash"></i> Remove
                                        </button>
                                    }
                                </div>
                                <div class="form-card-body">
                                    <div class="form-row">
                                        <div class="form-group half-width">
                                            <label asp-for="Addresses[i].Street">Street <span class="required-asterisk">*</span></label>
                                            <div class="input-group">
                                                <span class="input-icon"><i class="fas fa-map-marker-alt"></i></span>
                                                <input asp-for="Addresses[i].Street" class="form-input required-address" placeholder="Enter Street Address" />
                                            </div>
                                            <span asp-validation-for="Addresses[i].Street" class="field-validation-error"></span>
                                        </div>
                                        <div class="form-group half-width">
                                            <label asp-for="Addresses[i].City">City <span class="required-asterisk">*</span></label>
                                            <div class="input-group">
                                                <span class="input-icon"><i class="fas fa-city"></i></span>
                                                <input asp-for="Addresses[i].City" class="form-input required-address" placeholder="Enter City" />
                                            </div>
                                            <span asp-validation-for="Addresses[i].City" class="field-validation-error"></span>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group third-width">
                                            <label asp-for="Addresses[i].Province">Province <span class="required-asterisk">*</span></label>
                                            <select asp-for="Addresses[i].Province" class="form-select required-address" asp-items="Html.GetEnumSelectList<Province>()">
                                                <option value="">Select Province</option>
                                            </select>
                                            <span asp-validation-for="Addresses[i].Province" class="field-validation-error"></span>
                                        </div>
                                        <div class="form-group third-width">
                                            <label asp-for="Addresses[i].PostalCode">Postal Code</label>
                                            <div class="input-group">
                                                <span class="input-icon"><i class="fas fa-mail-bulk"></i></span>
                                                <input asp-for="Addresses[i].PostalCode" class="form-input" placeholder="Enter Postal Code" />
                                            </div>
                                            <span asp-validation-for="Addresses[i].PostalCode" class="field-validation-error"></span>
                                        </div>
                                        <div class="form-group third-width">
                                            <label asp-for="Addresses[i].AddressType">Address Type</label>
                                            <select asp-for="Addresses[i].AddressType" class="form-select" asp-items="Html.GetEnumSelectList<AddressType>()">
                                                <option value="">Select Address Type</option>
                                            </select>
                                            <span asp-validation-for="Addresses[i].AddressType" class="field-validation-error"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <button type="button" id="add-address" class="btn btn-secondary add-button">
                        <i class="fas fa-plus"></i> Add Address
                    </button>
                    <div class="address-validation-message field-validation-error" style="display: none;">Please complete at least one address with all required fields</div>

                    <div class="form-navigation">
                        <button type="button" class="btn btn-secondary prev-step"><i class="fas fa-arrow-left"></i> Back</button>
                        <button type="button" class="btn btn-primary next-step">Continue <i class="fas fa-arrow-right"></i></button>
                    </div>
                </div>

                <!-- Step 4: Contacts and Industries -->
                <div class="form-step" id="step4">
                    <h2>Step 4: Contacts and Industries</h2>

                    <div id="contacts-container">
                        @for (int i = 0; i < Model.Contacts.Count; i++)
                        {
                            <div class="contact-form form-card" data-contact-index="@i">
                                <div class="form-card-header">
                                    <h3>Contact @(i + 1)</h3>
                                    @if (i > 0)
                                    {
                                        <button type="button" class="btn btn-danger remove-contact">
                                            <i class="fas fa-trash"></i> Remove
                                        </button>
                                    }
                                </div>
                                <div class="form-card-body">
                                    <div class="form-row">
                                        <div class="form-group half-width">
                                            <label asp-for="Contacts[i].FirstName">First Name <span class="required-asterisk">*</span></label>
                                            <div class="input-group">
                                                <span class="input-icon"><i class="fas fa-user"></i></span>
                                                <input asp-for="Contacts[i].FirstName" class="form-input required-contact" placeholder="Enter first name" />
                                            </div>
                                            <span asp-validation-for="Contacts[i].FirstName" class="field-validation-error"></span>
                                        </div>
                                        <div class="form-group half-width">
                                            <label asp-for="Contacts[i].LastName">Last Name</label>
                                            <div class="input-group">
                                                <span class="input-icon"><i class="fas fa-user"></i></span>
                                                <input asp-for="Contacts[i].LastName" class="form-input" placeholder="Enter last name" />
                                            </div>
                                            <span asp-validation-for="Contacts[i].LastName" class="field-validation-error"></span>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group half-width">
                                            <label asp-for="Contacts[i].Email">Email</label>
                                            <div class="input-group">
                                                <span class="input-icon"><i class="fas fa-envelope"></i></span>
                                                <input asp-for="Contacts[i].Email" class="form-input" placeholder="Enter email" type="email" />
                                            </div>
                                            <span asp-validation-for="Contacts[i].Email" class="field-validation-error"></span>

                                        </div>
                                        <div class="form-group half-width">
                                            <label asp-for="Contacts[i].Phone">Phone <span class="required-asterisk">*</span></label>
                                            <div class="input-group">
                                                <span class="input-icon"><i class="fas fa-phone"></i></span>
                                                <input asp-for="Contacts[i].Phone" class="form-input required-contact" placeholder="Enter phone number" />
                                            </div>
                                            <span asp-validation-for="Contacts[i].Phone" class="field-validation-error"></span>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group half-width">
                                            <label asp-for="Contacts[i].ContactPhoto">Contact Photo</label>
                                            <div class="input-group">
                                                <span class="input-icon"><i class="fas fa-camera"></i></span>
                                                <input asp-for="Contacts[i].ContactPhoto" type="file" class="form-input" name="ContactPicture" accept="image/*" onchange="previewContactImage(this, @i)" />
                                            </div>
                                            <div class="image-preview">
                                                <img class="preview-image contact-preview" id="contact-preview-@i" src="#" alt="Preview" />
                                            </div>
                                        </div>
                                        <div class="form-group half-width">
                                            <label asp-for="Contacts[i].ContactType">Contact Type</label>
                                            <select asp-for="Contacts[i].ContactType" class="form-select" asp-items="Html.GetEnumSelectList<ContactType>()">
                                                <option value="">Select Contact Type</option>
                                            </select>
                                            <span asp-validation-for="Contacts[i].ContactType" class="field-validation-error"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <button type="button" id="add-contact" class="btn btn-secondary add-button">
                        <i class="fas fa-plus"></i> Add Contact
                    </button>
                    <div class="contact-validation-message field-validation-error" style="display: none;">Please complete at least one contact with all required fields</div>

                    <div class="form-card">
                        <div class="form-card-header">
                            <h3>Industries <span class="required-asterisk">*</span></h3>
                        </div>
                        <div class="form-card-body">
                            <div class="form-group">
                                <select asp-for="SelectedIndustryIds" class="form-select required-industry" multiple size="6">
                                    @foreach (var industry in Model.AvailableIndustries)
                                    {
                                        <option value="@industry.ID">@industry.Name (NAICS: @industry.NAICS)</option>
                                    }
                                </select>
                                <small class="form-text">Hold Ctrl (or Cmd on Mac) to select multiple industries</small>
                                <div class="industry-validation-message field-validation-error" style="display: none;">Please select at least one industry</div>
                            </div>
                        </div>
                    </div>

                    <div class="form-navigation">
                        <button type="button" class="btn btn-secondary prev-step"><i class="fas fa-arrow-left"></i> Back</button>
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/multi-step-form.js"></script>
}

