@using CrmTechTitans.Models.Enumerations
@model CrmTechTitans.Models.ViewModels.MemberCreateViewModel

@{
    ViewData["Title"] = "Create Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <header class="page-header">
        <h1>Create Member</h1>
        <p class="text-muted">Fill in the details below to add a new member.</p>
    </header>

    <div class="member-card">
        <div class="member-card-header">
            <div class="member-avatar">
                <i class="fas fa-user-plus"></i>
            </div>
            <div class="member-info">
                <h2 class="member-name">New Member Information</h2>
            </div>
        </div>
        <div class="member-card-content">
            <form asp-action="Create" method="post" id="multiStepForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Step 1: Member Details -->
                <div class="form-step active" id="step1">
                    <h3>Step 1: Member Details</h3>
                    <div class="form-group">
                        <label asp-for="MemberName"></label>
                        <input asp-for="MemberName" class="form-control" placeholder="Enter member name" />
                        <span asp-validation-for="MemberName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MembershipType"></label>
                        <select asp-for="MembershipType" class="form-control" asp-items="Html.GetEnumSelectList<MembershipType>()"></select>
                        <span asp-validation-for="MembershipType" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CompanySize"></label>
                        <select asp-for="CompanySize" class="form-control" asp-items="Html.GetEnumSelectList<CompanySize>()"></select>
                        <span asp-validation-for="CompanySize" class="text-danger"></span>
                    </div>

                    <div class="form-navigation">
                        <button type="button" class="btn btn-primary next-step">Next</button>
                    </div>
                </div>

                <!-- Step 2: Dates and Notes -->
                <div class="form-step" id="step2">
                    <h3>Step 2: Dates and Notes</h3>
                    <div class="form-group">
                        <label asp-for="MemberSince"></label>
                        <input asp-for="MemberSince" type="date" class="form-control" />
                        <span asp-validation-for="MemberSince" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastContactDate"></label>
                        <input asp-for="LastContactDate" type="date" class="form-control" />
                        <span asp-validation-for="LastContactDate" class="text-danger"></span>
                    </div>

                    <div class="form-navigation">
                        <button type="button" class="btn btn-secondary prev-step">Previous</button>
                        <button type="button" class="btn btn-primary next-step">Next</button>
                    </div>
                </div>

                <!-- Step 3: Addresses -->
                <div class="form-step" id="step3">
                    <h3>Step 3: Addresses</h3>
                    <div id="addresses-container">
                        @for (var i = 0; i < Model.Addresses.Count; i++)
                        {
                            <div class="address-form">
                                <div class="form-group">
                                    <label asp-for="Addresses[i].Street"></label>
                                    <input asp-for="Addresses[i].Street" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Addresses[i].City"></label>
                                    <input asp-for="Addresses[i].City" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Addresses[i].Province"></label>
                                    <select asp-for="Addresses[i].Province" class="form-control" asp-items="Html.GetEnumSelectList<Province>()"></select>
                                </div>
                            </div>
                        }
                    </div>
                    <button type="button" id="add-address" class="btn btn-secondary">Add Address</button>

                    <div class="form-navigation">
                        <button type="button" class="btn btn-secondary prev-step">Previous</button>
                        <button type="button" class="btn btn-primary next-step">Next</button>
                    </div>
                </div>

                <!-- Step 4: Contacts and Industries -->
                <div class="form-step" id="step4">
                    <h3>Step 4: Contacts and Industries</h3>
                    <div id="contacts-container">
                        @for (var i = 0; i < Model.Contacts.Count; i++)
                        {
                            <div class="contact-form">
                                <div class="form-group">
                                    <label asp-for="Contacts[i].FirstName"></label>
                                    <input asp-for="Contacts[i].FirstName" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Contacts[i].LastName"></label>
                                    <input asp-for="Contacts[i].LastName" class="form-control" />
                                </div>
                            </div>
                        }
                    </div>
                    <button type="button" id="add-contact" class="btn btn-secondary">Add Contact</button>

                    <div class="form-navigation">
                        <button type="button" class="btn btn-secondary prev-step">Previous</button>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const steps = document.querySelectorAll('.form-step');
            let currentStep = 0;

            function showStep(step) {
                steps.forEach((s, index) => s.classList.toggle('active', index === step));
            }

            document.querySelectorAll('.next-step').forEach(button => {
                button.addEventListener('click', () => {
                    if (currentStep < steps.length - 1) currentStep++;
                    showStep(currentStep);
                });
            });

            document.querySelectorAll('.prev-step').forEach(button => {
                button.addEventListener('click', () => {
                    if (currentStep > 0) currentStep--;
                    showStep(currentStep);
                });
            });

            showStep(currentStep);

            document.getElementById('add-address').addEventListener('click', function () {
                const index = document.querySelectorAll("#addresses-container .address-form").length;
                const html = `<div class="address-form">
                                <div class="form-group">
                                    <label>Street</label>
                                    <input type="text" name="Addresses[${index}].Street" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>City</label>
                                    <input type="text" name="Addresses[${index}].City" class="form-control" />
                                </div>
                            </div>`;
                document.getElementById("addresses-container").insertAdjacentHTML('beforeend', html);
            });

            document.getElementById('add-contact').addEventListener('click', function () {
                const index = document.querySelectorAll("#contacts-container .contact-form").length;
                const html = `<div class="contact-form">
                                <div class="form-group">
                                    <label>First Name</label>
                                    <input type="text" name="Contacts[${index}].FirstName" class="form-control" />
                                </div>
                            </div>`;
                document.getElementById("contacts-container").insertAdjacentHTML('beforeend', html);
            });
        });
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
