@using CrmTechTitans.Models.Enumerations
@model CrmTechTitans.Models.ViewModels.MemberCreateViewModel

@{
    ViewData["Title"] = "Create Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <header class="page-header">
        <h1>Create Member</h1>
        <p class="text-muted">Fill in the details below to add a new member to the database.</p>
    </header>

    <div class="member-card">
        <div class="member-card-header">
            <div class="member-avatar">
                <i class="fas fa-user-plus"></i>
            </div>
            <div class="member-info">
                <h2 class="member-name">New Member Information</h2>
            </div>
        </div>
        <div class="member-card-content">
            <form asp-action="Create" method="post" id="multiStepForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Step 1: Member Details -->
                <div class="form-step active" id="step1">
                    <h3>Step 1: Member Details</h3>

                    <div class="member-detail">
                        <i class="fas fa-user"></i>
                        <div class="form-group">
                            <label asp-for="MemberName" class="control-label">Member Name</label>
                            <input asp-for="MemberName" class="form-control" placeholder="Enter member name" data-bs-toggle="tooltip" title="Enter the full name of the member" />
                            <span asp-validation-for="MemberName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="member-detail">
                        <i class="fas fa-id-card"></i>
                        <div class="form-group">
                            <label asp-for="MembershipType" class="control-label">Membership Type</label>
                            <select asp-for="MembershipType" class="form-control" asp-items="Html.GetEnumSelectList<MembershipType>()" data-bs-toggle="tooltip" title="Select the type of membership">
                                <option value="">Select Membership Type</option>
                            </select>
                            <span asp-validation-for="MembershipType" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="member-detail">
                        <i class="fas fa-user-tie"></i>
                        <div class="form-group">
                            <label asp-for="ContactedBy" class="control-label">Contacted By</label>
                            <input asp-for="ContactedBy" class="form-control" placeholder="Enter contact person" data-bs-toggle="tooltip" title="Enter the name of the person who contacted this member" />
                            <span asp-validation-for="ContactedBy" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="member-detail">
                        <i class="fas fa-building"></i>
                        <div class="form-group">
                            <label asp-for="CompanySize" class="control-label">Company Size</label>
                            <select asp-for="CompanySize" class="form-control" asp-items="Html.GetEnumSelectList<CompanySize>()" data-bs-toggle="tooltip" title="Select the approximate size of the company">
                                <option value="">Select Company Size</option>
                            </select>
                            <span asp-validation-for="CompanySize" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="member-detail">
                        <i class="fas fa-globe"></i>
                        <div class="form-group">
                            <label asp-for="CompanyWebsite" class="control-label">Company Website</label>
                            <input asp-for="CompanyWebsite" class="form-control" placeholder="Enter company website" data-bs-toggle="tooltip" title="Provide the company’s website URL" />
                            <span asp-validation-for="CompanyWebsite" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-navigation">
                        <button type="button" class="btn btn-primary next-step" data-bs-toggle="tooltip" title="Go to the next step">Next</button>
                    </div>
                </div>

                <!-- Step 2: Dates and Notes -->
                <div class="form-step" id="step2">
                    <h3>Step 2: Dates and Notes</h3>

                    <div class="member-detail">
                        <i class="fas fa-calendar-alt"></i>
                        <div class="form-group">
                            <label asp-for="MemberSince" class="control-label">Member Since</label>
                            <input asp-for="MemberSince" class="form-control" type="date" data-bs-toggle="tooltip" title="Select the date when the member joined" />
                            <span asp-validation-for="MemberSince" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="member-detail">
                        <i class="fas fa-phone"></i>
                        <div class="form-group">
                            <label asp-for="LastContactDate" class="control-label">Last Contact Date</label>
                            <input asp-for="LastContactDate" class="form-control" type="date" data-bs-toggle="tooltip" title="Select the last time this member was contacted" />
                            <span asp-validation-for="LastContactDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="member-detail">
                        <i class="fas fa-sticky-note"></i>
                        <div class="form-group">
                            <label asp-for="Notes" class="control-label">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Enter any additional notes" data-bs-toggle="tooltip" title="Add any relevant details about this member"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-navigation">
                        <button type="button" class="btn btn-secondary prev-step" data-bs-toggle="tooltip" title="Go to the previous step">Previous</button>
                        <button type="button" class="btn btn-primary next-step" data-bs-toggle="tooltip" title="Go to the next step">Next</button>
                    </div>
                </div>

                <!-- Step 3 and Step 4 also have tooltips added similarly -->

                <div class="form-navigation">
                    <button type="submit" class="btn btn-success" data-bs-toggle="tooltip" title="Submit the form and create the member">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize Bootstrap Tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}
