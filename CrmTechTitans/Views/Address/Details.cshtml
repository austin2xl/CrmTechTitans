@model CrmTechTitans.Models.Address

@{
    ViewData["Title"] = "Address Details";
}

<div class="main-content">
    <header class="page-header-details">
        <h1>Address Details</h1>
    </header>

    <div class="member-card-details">
        <div class="member-card-header-details">
            <div class="member-avatar">
                <i class="fas fa-map-marker-alt"></i>
            </div>
            <div class="member-info">
                <h2 class="member-name">Address Information</h2>
            </div>
        </div>
        <div class="member-card-content">
            <!-- Member Name -->
            <div class="member-detail">
                <i class="fas fa-user"></i>
                <span>
                    <strong>Member Names:</strong>
                    @if (Model.MemberAddresses != null && Model.MemberAddresses.Any())
                    {
                        @string.Join(", ", Model.MemberAddresses.Select(ma => ma.Member?.MemberName))
                    }
                    else
                    {
                        <span>No member associated</span>
                    }
                </span>
            </div>

            <!-- Address Summary -->
            <div class="member-detail">
                <i class="fas fa-road"></i>
                <span>
                    <strong>Address:</strong>
                    @Model.Street, @Model.City, @Model.Province, @Model.PostalCode
                </span>
            </div>

            <!-- Municipality (City Name) -->
            <div class="member-detail">
                <i class="fas fa-city"></i>
                <span>
                    <strong>Municipality:</strong>
                    @Model.City
                </span>
            </div>

           
        </div>
        <div class="member-card-footer">
            <a asp-action="Edit" asp-route-id="@Model?.ID" class="button-1">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="button-2">
                <i class="fas fa-arrow-left"></i> Back to Municipalities
            </a>
        </div>
    </div>
</div>