@model IEnumerable<CrmTechTitans.Models.Address>

@{
    ViewData["Title"] = "All Addresses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <header class="page-header">
        <h1>All Addresses</h1>
        <p>Browse the list of addresses in the Niagara Industry Association. Use the "Create New Address" button to add a new address to the directory.</p>
        <a asp-action="Create" class="btn btn-primary custom-btn-spacing">Create New Address</a>
    </header>

    <section class="members-grid">
        @foreach (var item in Model)
        {
            <div class="member-card">
                <div class="member-card-header">
                    <div class="member-avatar">
                        <div class="avatar-placeholder">
                            @(item.Street?.Length > 0 ? item.Street[0].ToString() : "A")
                        </div>
                    </div>
                    <div class="member-info">
                        <h2 class="member-name">@item.Street</h2>
                        <p class="member-type">
                            @if (item.MemberAddresses.Any())
                            {
                                @string.Join(", ", item.MemberAddresses
                                         .Where(ma => ma.Member != null)
                                         .Select(ma => ma.Member.MemberName))
                            }
                            else
                            {
                                <span>No Member associated</span>
                            }
                        </p>
                    </div>
                </div>
                <div class="member-card-content">
                    <div class="member-detail">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>@item.City</span>
                    </div>
                    <div class="member-detail">
                        <i class="fas fa-map"></i>
                        <span>@item.Province</span>
                    </div>
                    <div class="member-detail">
                        <i class="fas fa-envelope"></i>
                        <span>@item.PostalCode</span>
                    </div>
                </div>
                <div class="member-card-footer">
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-secondary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-secondary">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </div>
            </div>
        }
    </section>
</div>
