@model IEnumerable<CrmTechTitans.Models.Address>

@{
    ViewData["Title"] = "Index";
}

<div class="main-content">
    <div class="page-header">
        <h1>Index</h1>
        <p>
            <a asp-action="Create" class="btn-primary">Create New</a>
        </p>
    </div>

    <div class="table-section">
        <table class="styled-table">
            <thead>
                <tr>
                    <th>Member</th>
                    <th>@Html.DisplayNameFor(model => model.Street)</th>
                    <th>@Html.DisplayNameFor(model => model.City)</th>
                    <th>@Html.DisplayNameFor(model => model.Province)</th>
                    <th>@Html.DisplayNameFor(model => model.PostalCode)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.MemberAddresses.Any())
                            {
                                @string.Join(", ", item.MemberAddresses
                                         .Where(mc => mc.Member != null)
                                         .Select(mc => mc.Member.MemberName))
                            }
                            else
                            {
                                <span>No Member associated</span>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Street)</td>
                        <td>@Html.DisplayFor(modelItem => item.City)</td>
                        <td>@Html.DisplayFor(modelItem => item.Province)</td>
                        <td>@Html.DisplayFor(modelItem => item.PostalCode)</td>
                        <td class="action-buttons">
                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn-secondary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.ID" class="btn-secondary">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.ID" class="btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
