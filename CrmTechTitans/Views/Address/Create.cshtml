@model CrmTechTitans.Models.Address

@{
    ViewData["Title"] = "Create Address";
}

<div class="main-content">
    <header class="page-header">
        <h1>Create New Address</h1>
    </header>

    <div class="member-card">
        <div class="member-card-header">
            <div class="member-avatar">
                <i class="fas fa-map-marker-alt"></i>
            </div>
            <div class="member-info">
                <h2 class="member-name">New Address</h2>
                <p class="member-type">Please fill in the details below</p>
            </div>
        </div>
        <div class="member-card-content">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="member-detail">
                    <i class="fas fa-road"></i>
                    <div class="form-group">
                        <label asp-for="Street" class="control-label"></label>
                        <input asp-for="Street" class="form-control" />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                </div>
                <div class="member-detail">
                    <i class="fas fa-city"></i>
                    <div class="form-group">
                        <label asp-for="City" class="control-label"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                <div class="member-detail">
                    <i class="fas fa-flag"></i>
                    <div class="form-group">
                        <label asp-for="Province" class="control-label"></label>
                        <select asp-for="Province" class="form-control" asp-items="Html.GetEnumSelectList<CrmTechTitans.Models.Enumerations.Province>()"></select>
                        <span asp-validation-for="Province" class="text-danger"></span>
                    </div>
                </div>
                <div class="member-detail">
                    <i class="fas fa-mail-bulk"></i>
                    <div class="form-group">
                        <label asp-for="PostalCode" class="control-label"></label>
                        <input asp-for="PostalCode" class="form-control" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                </div>
            </form>
        </div>
        <div class="member-card-footer">
            <button type="submit" class="button-1">
                <i class="fas fa-plus"></i> Create
            </button>
            <a asp-action="Index" class="button-2">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

