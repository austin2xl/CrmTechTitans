﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .main-container {
            display: flex;
            flex: 1; /* Ensures the main container takes up all available space */
        }

        .sidebar {
            width: 222px;
            background-color: #f8f9fa;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
        }

            .sidebar .logo {
                padding: 0;
                margin: 0;
                text-align: center;
                background-color: #f8f9fa;
            }

                .sidebar .logo img {
                    height: auto;
                    display: block;
                    margin: 0 auto;
                    object-fit: contain;
                }

            .sidebar a {
                display: block;
                padding: 15px 20px;
                color: #333;
                text-decoration: none;
                font-weight: 500;
                transition: all 0.3s;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: #d42d27;
                    color: #fff;
                    font-weight: bold;
                }

        .content-container {
            flex: 1; /* Ensures the content container expands to fill remaining space */
            padding: 20px;
            background-color: #fff;
        }

        footer {
            border-top: 1px solid #ddd;
            padding: 10px;
            text-align: center;
            background-color: #f8f9fa;
        }

            footer a {
                color: #d42d27;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="sidebar">
            <div class="logo">
                <img src="/logo.PNG" alt="Niagara Industry Association Logo" />
            </div>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Member" ? "active" : "")"
               asp-area=""
               asp-controller="Member"
               asp-action="Index">
                Members
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Contact" ? "active" : "")"
               asp-area=""
               asp-controller="Contact"
               asp-action="Index">
                Contacts
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Address" ? "active" : "")"
               asp-area=""
               asp-controller="Address"
               asp-action="Index">
                Addresses
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Opportunity" ? "active" : "")"
               asp-area=""
               asp-controller="Opportunity"
               asp-action="Index">
                Opportunities
            </a>

            <a class="nav-link text-dark" asp-area="" asp-controller="Industry" asp-action="Index">All Industry</a>

            <partial name="_LoginPartial" />

        </div>

        <div class="content-container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CrmTechTitans | <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>