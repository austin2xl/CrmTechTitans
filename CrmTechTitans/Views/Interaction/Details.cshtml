@model CrmTechTitans.Models.Interaction

@{
    ViewData["Title"] = "Interaction Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <header class="page-header">
        <h1>Interaction Details</h1>
        <p class="text-muted">Detailed information about the selected interaction.</p>
    </header>

    <div class="member-card">
        <div class="member-card-header">
            <div class="member-avatar">
                <i class="fas fa-comments"></i>
            </div>
            <div class="member-info">
                <h2 class="member-name">Interaction Information</h2>
            </div>
        </div>
        <div class="member-card-content">
            <!-- Associated Members -->
            <div class="member-detail">
                <i class="fas fa-users"></i>
                <span>
                    <strong>Associated Members:</strong>
                    @if (Model.InteractionMembers.Any())
                    {
                        @string.Join(", ", Model.InteractionMembers
                                 .Where(im => im.Member != null)
                                 .Select(im => im.Member.MemberName))
                    }
                    else
                    {
                        <text>No Member Associated</text>
                    }
                </span>
            </div>

            <!-- Interaction -->
            <div class="member-detail">
                <i class="fas fa-comment"></i>
                <span>
                    <strong>Interaction:</strong>
                    @Html.DisplayFor(model => model.interaction)
                </span>
            </div>

            <!-- Date -->
            <div class="member-detail">
                <i class="fas fa-calendar-alt"></i>
                <span>
                    <strong>Date:</strong>
                    @Html.DisplayFor(model => model.Date)
                </span>
            </div>

            <!-- Person -->
            <div class="member-detail">
                <i class="fas fa-user"></i>
                <span>
                    <strong>Person:</strong>
                    @Html.DisplayFor(model => model.Person)
                </span>
            </div>
        </div>
        <div class="member-card-footer">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="button-1">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="button-2">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>