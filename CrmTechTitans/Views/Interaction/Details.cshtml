@model CrmTechTitans.Models.Interaction

@{
    ViewData["Title"] = "Interaction Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <header class="page-header">
        <h1>Interaction Details</h1>
        <p class="text-muted">Detailed information about the selected interaction.</p>
    </header>

    <div class="member-card">
        <div class="member-card-header">
            <div class="member-avatar">
                <i class="fas fa-comments"></i>
            </div>
            <div class="member-info">
                <h2 class="member-name">Interaction Information</h2>
            </div>
        </div>
        <div class="member-card-content">
            <!-- Associated Members -->
            <div class="member-detail">
                <i class="fas fa-users"></i>
                <span>
                    <strong>Associated Members:</strong>
                    @if (Model.InteractionMembers.Any())
                    {
                        @string.Join(", ", Model.InteractionMembers
                                 .Where(im => im.Member != null)
                                 .Select(im => im.Member.MemberName))
                    }
                    else
                    {
                        <text>No Members Associated</text>
                    }
                </span>
            </div>

            <!-- Interaction Details -->
            <div class="member-detail">
                <i class="fas fa-comment"></i>
                <span>
                    <strong>Interaction:</strong>
                    @Html.DisplayFor(model => model.InteractionDetails)
                </span>
            </div>

            <!-- Date -->
            <div class="member-detail">
                <i class="fas fa-calendar-alt"></i>
                <span>
                    <strong>Date:</strong>
                    @Model.Date.ToString("f") <!-- Full date/time pattern (long) -->
                </span>
            </div>

            <!-- Contacted Person -->
            <div class="member-detail">
                <i class="fas fa-user-tie"></i>
                <span>
                    <strong>Contacted Person:</strong>
                    @Model.Contact?.FullFormalName ?? "N/A"
                </span>
            </div>
        </div>
        <div class="member-card-footer">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Interactions
            </a>
        </div>
    </div>
</div>
