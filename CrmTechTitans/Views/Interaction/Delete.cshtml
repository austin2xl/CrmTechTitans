@model CrmTechTitans.Models.Interaction

@{
    ViewData["Title"] = "Delete Interaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <header class="page-header">
        <h1>Delete Interaction</h1>
        <p class="text-danger">Are you sure you want to delete this interaction? This action cannot be undone.</p>
    </header>

    <div class="member-card">
        <div class="member-card-header">
            <div class="member-avatar">
                <i class="fas fa-comments"></i>
            </div>
            <div class="member-info">
                <h2 class="member-name">Interaction Details</h2>
            </div>
        </div>
        <div class="member-card-content">
            <div class="member-detail">
                <i class="fas fa-comment"></i>
                <span>
                    <strong>Interaction:</strong>
                    @Html.DisplayFor(model => model.InteractionDetails)
                </span>
            </div>
            <div class="member-detail">
                <i class="fas fa-calendar-alt"></i>
                <span>
                    <strong>Date:</strong>
                    @Model.Date.ToString("g") <!-- General date/time pattern -->
                </span>
            </div>
            <div class="member-detail">
                <i class="fas fa-user-tie"></i>
                <span>
                    <strong>Contacted Person:</strong>
                    @Model.Contact?.FullFormalName ?? "N/A"
                </span>
            </div>
        </div>
        <div class="member-card-footer">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="button-2 btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
                <a asp-action="Index" class="button-1 btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>