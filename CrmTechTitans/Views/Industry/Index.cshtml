@model IEnumerable<CrmTechTitans.Models.Industry>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Member
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NAICS)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    @if (item.IndustryMembers.Any())
                    {
                        @string.Join(", ", item.IndustryMembers
                                 .Where(mc => mc.Member != null)
                                 .Select(mc => mc.Member.MemberName))
                    }
                    else
                    {
                        <span>No Member associated</span>
                    }
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.NAICS)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
