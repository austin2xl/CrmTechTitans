@model IEnumerable<CrmTechTitans.Models.Industry>

@{
    ViewData["Title"] = "All Industries";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="crm-container">
    <!-- Main Content -->
    <div class="main-content">

        <header class="page-header">
          
        </header>

        <section class="members-table-container">
            <table class="table custom-table">
                <thead>
                    <tr>
                        <th>Industry Name</th>
                        <th>NAICS Code</th>
                        <th>Associated Members</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)

                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.NAICS</td>
                            <td>
                                @(item.IndustryMembers.Any()
                                    ? string.Join(", ", item.IndustryMembers
                                    .Where(im => im.Member != null)
                                    .Select(im => im.Member.MemberName))
                                    : "No Member Associated")
                            </td>
                            <td class="text-center action-buttons">
                                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-edit">
                                    Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-details">
                                    Details
                                </a>
                              
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>
