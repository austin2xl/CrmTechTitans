@model IEnumerable<CrmTechTitans.Models.Industry>

@{
    ViewData["Title"] = "Industry Index";
}

<link rel="stylesheet" href="~/css/tables.css" />

<div class="container">
    <h1>Industries</h1>
    <div class="create-new">
        <a asp-action="Create">Create New</a>
    </div>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>Member</th>
                    <th>@Html.DisplayNameFor(model => model.NAICS)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>
                            @if (item.IndustryMembers.Any())
                            {
                                @string.Join(", ", item.IndustryMembers
                                         .Where(im => im.Member != null)
                                         .Select(im => im.Member.MemberName))
                            }
                            else
                            {
                                <span class="no-data">No Member associated</span>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.NAICS)</td>
                        <td>
                            <div class="actions">
                                <a asp-action="Edit" asp-route-id="@item.ID" class="edit">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.ID" class="details">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.ID" class="delete">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>