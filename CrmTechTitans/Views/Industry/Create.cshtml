@model CrmTechTitans.Models.Industry

@{
    ViewData["Title"] = "Create Industry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <header class="page-header">
        <h1>Create Industry</h1>
        <p class="text-muted">Fill in the details below to add a new Industry to the database.</p>
    </header>

    <div class="member-card">
        <div class="member-card-header">
            <div class="member-avatar">
                <i class="fas fa-industry"></i>
            </div>
            <div class="member-info">
                <h2 class="member-name">New Industry Information</h2>
            </div>
        </div>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="member-card-content">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <p class="text-muted"><span style="color: red;">*</span> Indicates a required field.</p>

                <div class="member-detail">
                    <i class="fas fa-tag"></i>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">
                            Industry Name <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Enter industry name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="member-detail">
                    <i class="fas fa-barcode"></i>
                    <div class="form-group">
                        <label asp-for="NAICS" class="control-label">
                            NAICS Code <span class="text-danger">*</span>
                        </label>
                        <input asp-for="NAICS" class="form-control" placeholder="Enter NAICS code" />
                        <span asp-validation-for="NAICS" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="member-card-footer">
                <button type="submit" class="button-1">
                    <i class="fas fa-save"></i> Create
                </button>
                <a asp-action="Index" class="button-2">
                    <i class="fas fa-arrow-left"></i> Back to Industries
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}