@model CrmTechTitans.Models.Industry

@{
    ViewData["Title"] = "Industry Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <header class="page-header">
        <h1>Industry Details</h1>
        <p class="text-muted">Detailed information about the selected industry.</p>
    </header>

    <div class="member-card">
        <div class="member-card-header">
            <div class="member-avatar">
                <i class="fas fa-industry"></i>
            </div>
            <div class="member-info">
                <h2 class="member-name">@Model.Name</h2>
            </div>
        </div>
        <div class="member-card-content">
            <!-- Industry Details -->
            <div class="member-detail">
                <i class="fas fa-tag"></i>
                <span>
                    <strong>Industry Name:</strong>
                    @Html.DisplayFor(model => model.Name)
                </span>
            </div>
            <div class="member-detail">
                <i class="fas fa-barcode"></i>
                <span>
                    <strong>NAICS Code:</strong>
                    @Html.DisplayFor(model => model.NAICS)
                </span>
            </div>

            <!-- Associated Members -->
            <div class="member-detail">
                <i class="fas fa-users"></i>
                <span>
                    <strong>Associated Members:</strong>
                    @if (Model.IndustryMembers != null && Model.IndustryMembers.Any())
                    {
                        <ul>
                            @foreach (var industryMember in Model.IndustryMembers)
                            {
                                <li>
                                    <a asp-controller="Member" asp-action="Details" asp-route-id="@industryMember.Member.ID">
                                        @industryMember.Member.MemberName
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No members associated</span>
                    }
                </span>
            </div>
        </div>
        <div class="member-card-footer">
            <a asp-action="Edit" asp-route-id="@Model?.ID" class="button-1">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="button-2">
                <i class="fas fa-arrow-left"></i> Back to Industries
            </a>
        </div>
    </div>
</div>