@model CrmTechTitans.Models.Industry

@{
    ViewData["Title"] = "Delete Industry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <header class="page-header">
        <h1>Delete Industry</h1>
        <p class="text-danger">Are you sure you want to delete this industry? This action cannot be undone.</p>
    </header>

    <div class="member-card">
        <div class="member-card-header">
            <div class="member-avatar">
                <i class="fas fa-industry"></i>
            </div>
            <div class="member-info">
                <h2 class="member-name">@Model.Name</h2>
            </div>
        </div>
        <div class="member-card-content">
            <div class="member-detail">
                <i class="fas fa-tag"></i>
                <span>
                    <strong>Industry Name:</strong>
                    @Html.DisplayFor(model => model.Name)
                </span>
            </div>
            <div class="member-detail">
                <i class="fas fa-barcode"></i>
                <span>
                    <strong>NAICS Code:</strong>
                    @Html.DisplayFor(model => model.NAICS)
                </span>
            </div>
        </div>
        <div class="member-card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="ID" />
                <button type="submit" class="button-2">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
            </form>
            <a asp-action="Index" class="button-1">
                <i class="fas fa-arrow-left"></i> Cancel
            </a>
        </div>
    </div>
</div>

